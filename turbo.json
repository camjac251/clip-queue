{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["pnpm-workspace.yaml", "turbo.json", ".env", "tsconfig.json"],
  "globalEnv": [
    "NODE_ENV",
    "TWITCH_CLIENT_ID",
    "TWITCH_CLIENT_SECRET",
    "TWITCH_BOT_TOKEN",
    "TWITCH_CHANNEL_NAME",
    "SESSION_SECRET",
    "API_URL",
    "FRONTEND_URL",
    "PORT",
    "DB_PATH",
    "VITE_TWITCH_CLIENT_ID",
    "VITE_API_URL",
    "VITE_TWITCH_REDIRECT_URI",
    "VITE_PORT"
  ],
  "tasks": {
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", ".vite/**"]
    },
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^build"],
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "i18n:check": {
      "cache": false,
      "inputs": ["messages/*.json", "project.inlang/**", "scripts/check-i18n.ts"]
    },
    "i18n:sync": {
      "cache": false,
      "inputs": ["messages/en.json", "scripts/sync-i18n.ts"],
      "outputs": ["messages/*.json"]
    },
    "i18n:translate": {
      "cache": false,
      "inputs": ["messages/*.json", "project.inlang/**"],
      "outputs": ["messages/*.json"]
    },
    "lint": {
      "cache": true,
      "dependsOn": ["typecheck"]
    },
    "lint:fix": {
      "cache": false,
      "dependsOn": ["typecheck"]
    },
    "setup": {
      "cache": false
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build"],
      "env": ["CI"],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "cache": true,
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^build"]
    }
  }
}
